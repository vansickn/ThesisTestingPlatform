rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // match /{document=**} {
    //   allow read; 
    //   allow write: if
    //       request.auth != null;
    // }
    match /users/{userID} {
      allow read: if request.auth.uid == userID;
      allow write: if request.auth.uid == userID;
      allow delete: if request.auth.uid == userID;
    }
    match /CreatedTests/{test} {
      allow create: if request.auth != null;
      allow read: if request.auth != null;
      allow delete: if request.auth != null;
    }
    match /fanSampleTests/{test} {
      allow read;
      allow update;
    }
    match /randomSampleTests/{test} {
      allow read;
      allow update: if request.auth != null;
    }
  }
  match /databases/{database}/documents/CreatedTests/{test} {
    // Allow to increment img_x_votes only by 1
    match /_counter_shards_/{shardId} {
      allow get;
      allow write: if request.resource.data.keys().hasAny(["img_1_votes","img_2_votes","img_3_votes","img_4_votes"])
    }
  }
}